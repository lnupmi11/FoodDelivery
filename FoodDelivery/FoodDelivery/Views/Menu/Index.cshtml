@model IEnumerable<MenuItemDTO>

@{
    ViewData["Title"] = "Index";
    MenuItemDTO currItem = null;
    bool isAdmin = User.Identity.IsAuthenticated && User.IsInRole("Admin");
    bool isManager = User.Identity.IsAuthenticated && User.IsInRole("OrderManager");
    bool isUser = User.Identity.IsAuthenticated && User.IsInRole("User");
}

<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <h1 class="my-4">Sort by</h1>
            <div class="btn-group-vertical">
                <a asp-controller="Menu" asp-action="Index" asp-route-filterOpt="asc" asp-route-searchWord="@ViewBag.SearchWord" class="btn btn-outline-dark">Price ascending</a>
                <a asp-controller="Menu" asp-action="Index" asp-route-filterOpt="desc" asp-route-searchWord="@ViewBag.SearchWord" class="btn btn-outline-dark">Price descending</a>
                <a asp-controller="Menu" asp-action="Index" asp-route-filterOpt="discounts" asp-route-searchWord="@ViewBag.SearchWord" class="btn btn-outline-dark">With discount</a>
            </div>
            <hr />
            <form asp-Controller="Menu" asp-action="Index" method="get">
                <div class="form-actions no-color">
                    <p>
                        <input type="text" name="searchWord" class="form-control" value="@ViewBag.SearchWord" />
                    </p>
                    <input type="submit" value="Search" class="btn btn-outline-dark" />
                    | <a asp-controller="Menu" asp-action="Index" asp-route-filterOpt="" asp-route-searchWord="">Back to full list</a>
                </div>
            </form>
            @if (isAdmin || isManager)
            {
                <hr />
                <a asp-controller="Menu" asp-action="Add" class="btn btn-dark">Add  menu item</a>
                <a asp-controller="Menu" asp-action="Add" class="btn btn-dark">Add  category</a>
            }
        </div>

        <div class="col-lg-9">
            @for (int i = 0; i < ViewBag.Rows; ++i)
            {
                <div class="row">
                    @for (int j = 0; j < ViewBag.Cols && i * ViewBag.Cols + j < Model.Count(); ++j)
                    {
                        <div class="col-lg-4 col-md-4 mb-4">
                            @{currItem = Model.ElementAt(i * 3 + j);}
                            <div class="card">
                                <img class="card-img-top" src="@currItem.Image" alt="Image">
                                <h4 class="card-title">
                                    <a href="#">@currItem.Name</a>
                                </h4>
                                <div class="card-body">
                                    <span>@currItem.Price $</span>
                                    <br>
                                    <span>@currItem.Description</span>
                                    <br>
                                </div>
                                <div class="card-footer">
                                    @if (isAdmin || isManager)
                                    {
                                        <a asp-controller="Menu" asp-action="Edit" asp-route-id="@currItem.Id" class="btn btn-primary">Edit</a>
                                        <a asp-controller="Menu" asp-action="Delete" asp-route-id="@currItem.Id" class="btn btn-danger">Delete</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="" asp-action="" asp-route-id="@currItem.Id" class="btn btn-success">Add to cart</a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            <div class="d-flex justify-content-center">
                <ul class="pagination">
                    @for (var i = 1; i <= ViewBag.Total; i++)
                    {
                        <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                            <a asp-controller="Menu" asp-action="Index" asp-route-page="@i"
                                 asp-route-filterOpt="@ViewBag.FilterOpt" asp-route-searchWord="@ViewBag.SearchWord"
                                 class="page-link">@i</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
