@model CartModel

@{
    ViewData["Title"] = "Index";
}

@section Scripts
    {
    <script>
        function AddToCart(itemId) {
            $.ajax({
                url: "Cart/AddItem?itemId=" + itemId,
                success: function () {
                    $('#' + itemId).val(parseInt($('#' + itemId).val()) + 1);
                }
            });
        }

        function RemoveFromCart(itemId) {
            if ($('#' + itemId).val() != 1) {
                $.ajax({
                    url: "Cart/RemoveItem?itemId=" + itemId,
                    success: function () {
                        $('#' + itemId).val(parseInt($('#' + itemId).val()) - 1);
                    }
                });
            }
        }

        $(document).ready(function () {
            $('.count').prop('disabled', true);
        });
    </script>
}
@if (Model.CartItems.Any())
{
    <a asp-controller="Cart" asp-action="Clear" class="btn btn-success">Clear Cart</a>
    <a asp-controller="Cart" asp-action="Submit" class="btn btn-success">Submit Cart</a>
}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h1 class="my-4">Sort by</h1>
            <div class="btn-group-vertical">
                <a asp-controller="Cart" asp-action="Index" asp-route-filterOpt="asc" asp-route-searchWord="@ViewBag.SearchWord"
                   asp-route-categoryId="@ViewBag.CategoryId" class="btn btn-outline-dark">Price ascending</a>
                <a asp-controller="Cart" asp-action="Index" asp-route-filterOpt="desc" asp-route-searchWord="@ViewBag.SearchWord"
                   asp-route-categoryId="@ViewBag.CategoryId" class="btn btn-outline-dark">Price descending</a>
                <a class="btn btn-outline-dark" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Search in category
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a asp-controller="Menu" asp-action="Index" asp-route-filterOpt="" asp-route-searchWord="@ViewBag.SearchWord"
                       asp-route-categoryId="" class="dropdown-item">All categories</a>
                    @foreach (var c in Model.Categories)
                    {
                        <a asp-controller="Cart" asp-action="Index" asp-route-filterOpt="" asp-route-searchWord="@ViewBag.SearchWord"
                           asp-route-categoryId="@c.Id" class="dropdown-item">@c.CategoryName</a>
                    }
                </div>
            </div>

            <div class="dropdown show mt-2"></div>

            <hr />
            <form asp-Controller="Cart" asp-action="Index" method="get">
                <div class="form-actions no-color">
                    <p>
                        <input type="text" name="searchWord" class="form-control" value="@ViewBag.SearchWord" />
                    </p>
                    <input type="submit" value="Search" class="btn btn-outline-dark" />
                    <a asp-controller="Cart" asp-action="Index" asp-route-filterOpt="" asp-route-searchWord="" asp-route-categoryId="">
                        <input type="submit" value="Back to full list" class="btn btn-outline-dark" />
                    </a>
                </div>
            </form>
        </div>
        @if (Model.CartItems.Count() > 0)
        {
            <div class="col-md-9">
                @foreach (var item in Model.CartItems)
                {
                    <div class="card item-cart-card">
                        <div class="card-header">
                            @item.Name
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <img class="card-img-inline-cart" src="@item.Image" alt="Image">
                                </div>
                                <div class="col-md-6">
                                    <h5 class="card-title">Price per item: @item.Price $</h5>
                                    <p class="card-text">@item.Description</p>
                                    <a asp-controller="Cart" asp-action="DeleteItemFromCart" class="btn btn-success">Remove from Cart</a>
                                </div>
                                <div class="col-md-3">
                                    <div class="item-counter-cart">
                                        <span class="minus" onclick="return RemoveFromCart('@item.Id')">-</span>
                                        <input disabled="disabled" type="number" id="@item.Id" class="count" value="@item.Count" style="width: 40px; display:inline-block;">
                                        <span class="plus" onclick="return AddToCart('@item.Id')">+</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-12">
                <div class="d-flex justify-content-center">
                    <ul class="pagination">
                        @for (var i = 1; i <= ViewBag.Total; i++)
                        {
                            <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                <a asp-controller="Cart" asp-action="Index" asp-route-page="@i"
                                   asp-route-filterOpt="@ViewBag.FilterOpt" asp-route-searchWord="@ViewBag.SearchWord"
                                   asp-route-categoryId="@ViewBag.CategoryId" class="page-link">@i</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
        else
        {
            <h2>Your cart is empty</h2>
        }
    </div>
</div>


