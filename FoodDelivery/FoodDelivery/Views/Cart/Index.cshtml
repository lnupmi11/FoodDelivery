@model IEnumerable<FoodDelivery.DTO.Cart.CartItemDTO>

@{
    ViewData["Title"] = "Index";
}

@section Scripts
    {
    <script>
        function AddToCart(itemId) {
            $.ajax({
                url: "Cart/AddItem?itemId=" + itemId,
                success: function () {
                    $('#' + itemId).val(parseInt($('#' + itemId).val()) + 1);
                }
            });
        }

        function RemoveFromCart(itemId) {
            if ($('#' + itemId).val() != 1) {
                $.ajax({
                    url: "Cart/RemoveItem?itemId=" + itemId,
                    success: function () {
                        $('#' + itemId).val(parseInt($('#' + itemId).val()) - 1);
                    }
                });
            }
        }

        $(document).ready(function () {
            $('.count').prop('disabled', true);
        });
    </script>
}
<a asp-controller="Cart" asp-action="Clear" class="btn btn-success">Clear Cart</a>
<a asp-controller="Cart" asp-action="Submit" class="btn btn-success">Submit Cart</a>
@foreach (var item in Model)
{
    <div class="card card-item">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <img class="card-img-inline-cart" src="@item.Image" alt="Image">
                </div>
                <div class="col-md-5">
                    <div class="card-inline-cart">
                        <div class="item-description-cart ">
                            <h3 class="item-title-cart">
                                <a href="#">@item.Name</a>
                            </h3>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <h3 style="margin-top: 20px;">@item.Price $</h3>
                </div>
                <div class="col-md-2">
                    <div class="item-counter-cart">
                        <span class="minus bg-dark" onclick="return RemoveFromCart(@item.Id)">-</span>
                        <input type="number" id="@item.Id" class="count" value="@item.Count">
                        <span class="plus bg-dark" onclick="return AddToCart(@item.Id)">+</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
