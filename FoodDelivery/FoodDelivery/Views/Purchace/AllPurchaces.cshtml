@model List<FoodDelivery.DTO.Purchace.PurchaceDTO>
@{
    ViewData["Title"] = "AllPurchaces";
}
<h3>Your purchaces</h3>
@foreach (var item in Model)
{
    <div class="card card-item">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <div class="card-inline-cart">
                        <div class="item-description-cart ">
                            <p style="margin-top: 20px;">Date of submition: @item.SubmittedTime</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
                <div class="col-md-2">
                    <h3 style="margin-top: 15px;">@item.TotalPrice $</h3>
                </div>
                <div class="col-md-2">
                    <a asp-controller="Purchace" asp-action="ItemsInSelectedPurchace" asp-route-purchaceId="@item.Id" class="btn btn-success">View Details</a>
                </div>
                </div>
            </div>
    </div>
}

